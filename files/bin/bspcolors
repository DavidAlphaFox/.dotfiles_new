## A script to get colours from xrdb & deploy it to polybar, alacritty & rofi.

DIR="$HOME/.config/bspwm"

getcolors () {
	FOREGROUND="#fff3ff"
	BACKGROUND="#0d0c0f"
	CURSOR="$(xrdb -query | grep 'cursorColor:'| awk '{print $NF}')"
	BLACK="#0d0c0f"
	RED="#8A7689"
	GREEN="#B2B4E8"
	YELLOW="#ACA2BF"
	BLUE="#6B84B6"
	MAGENTA="#989CDE"
	CYAN="#6895E2"
	WHITE="#dfd3e7"
	ALTBLACK="#25222b"
	ALTRED="#c388c1"
	ALTGREEN="#c3c8ff"
	ALTYELLOW="#d8bbff"
	ALTBLUE="#78a5ff"
	ALTMAGENTA="#adb5ff"
	ALTCYAN="#71bcff"
	ALTWHITE="#fff3ff"
}

bspbar () {
	cat > $DIR/polybar/colors <<- EOF
	[colors]

	foreground = ${FOREGROUND}
	background = #800d0c0f
  active = #6084cb
  inactive = #425a8c
	black = ${BLACK}
	red = ${RED}
	green = ${GREEN}
	yellow = ${YELLOW}
	blue = ${BLUE}
	magenta = ${MAGENTA}
	cyan = ${CYAN}
	white = ${WHITE}
	altblack = ${ALTBLACK}
	altred = ${ALTRED}
	altgreen = ${ALTGREEN}
	altyellow = ${ALTYELLOW}
	altblue = ${ALTBLUE}
	altmagenta = ${ALTMAGENTA}
	altcyan = ${ALTCYAN}
	altwhite = ${ALTWHITE}
	EOF
}

bspterm () {
	cat > "$DIR"/alacritty/colors.yml <<- _EOF_
		## Colors configuration
		colors:
		  # Default colors
		  primary:
		    background: '${BACKGROUND}'
		    foreground: '${FOREGROUND}'

		  # Normal colors
		  normal:
		    black:   '${BLACK}'
		    red:     '${RED}'
		    green:   '${GREEN}'
		    yellow:  '${YELLOW}'
		    blue:    '${BLUE}'
		    magenta: '${MAGENTA}'
		    cyan:    '${CYAN}'
		    white:   '${WHITE}'

		  # Bright colors
		  bright:
		    black:   '${ALTBLACK}'
		    red:     '${ALTRED}'
		    green:   '${ALTGREEN}'
		    yellow:  '${ALTYELLOW}'
		    blue:    '${ALTBLUE}'
		    magenta: '${ALTMAGENTA}'
		    cyan:    '${ALTCYAN}'
		    white:   '${ALTWHITE}'
	_EOF_
}

#code-transparent needed
bspvscode () {
	sed -i 's/\("workbench\.background"\s*:\s*\).*$/\1"#0d0c0f80",/' "$HOME/.config/Code - OSS/User/settings.json" &
}

bsprofi () {
	cat > $DIR/rofi/themes/colors.rasi <<- EOF	
	* {
		background:			#0d0c0f80;
    background-alt: #00000000;
		foreground:			${FOREGROUND};
		selected:			${BLUE};
		highlight:			${YELLOW};
		urgent:				${RED};
		on:					${GREEN};
		off:				${RED};
	}
	EOF
}

bspdunst () {
	sed -i '/urgency_low/Q' "$HOME"/.config/bspwm/dunstrc
	cat >> "$HOME"/.config/bspwm/dunstrc <<- _EOF_
		[urgency_low]
		timeout = 2
    background = "${BACKGROUND}80"
    foreground = "${FOREGROUND}"
		frame_color = "${BLUE}"

		[urgency_normal]
		timeout = 5
    background = "${BACKGROUND}80"
    foreground = "${FOREGROUND}"
		frame_color = "${BLUE}"

		[urgency_critical]
		timeout = 0
    background = "${BACKGROUND}80"
    foreground = "${FOREGROUND}"
		frame_color = "${RED}"
	_EOF_
}

#colors for firefox
bspcss () {
	cat > $DIR/css/colors.css <<- EOF	
	:root {
		--bg-color: #0d0c0f80;
	}
	EOF
}

#needed pywal-discord (yay -S pywal-discord)
bspapps () {
  exec python3 $DIR/scripts/wal-telegram/pallete-gen.py &
  exec pywal-discord &
}



main () {
	getcolors
	bspbar
	bspterm
	bsprofi
	bspdunst
  bspvscode
  bspcss
  bspapps
}

main
